---
import { socialLinks, musicPlatforms } from '../data/socialLinks.js';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Sunkissed - Indie Rock Band" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=Rajdhani:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>Sunkissed - Synthwave</title>
  </head>
  <body>
    <!-- CRT Overlay -->
    <div class="crt-overlay"></div>

    <!-- VHS Tracking -->
    <div class="vhs-tracking"></div>

    <!-- Style Switcher -->
    <nav class="style-switcher">
      <span class="switcher-label">STYLE://</span>
      <a href="/">Original</a>
      <a href="/synthwave" class="active">Synthwave</a>
      <a href="/zine">Zine</a>
      <a href="/y2k">Y2K</a>
      <a href="/vintage">Vintage</a>
      <a href="/dreamy">Dreamy</a>
      <a href="/grunge">Grunge</a>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
      <div class="neon-grid"></div>
      <div class="hero-content">
        <div class="logo-container">
          <img src="/logo.png" alt="Sunkissed" class="logo" />
          <div class="logo-glow"></div>
        </div>
        <h1 class="hero-title">
          <span class="chromatic">SUNKISSED</span>
        </h1>
        <p class="hero-tagline">
          <span class="tagline-bracket">&lt;</span>
          INDIE ROCK FROM THE FUTURE
          <span class="tagline-bracket">&gt;</span>
        </p>
        <div class="hero-cta">
          <a href="#music" class="btn-synthwave"><span>INITIALIZE</span></a>
          <a href="#about" class="btn-synthwave-outline"><span>SCAN DATA</span></a>
        </div>
      </div>
      <div class="sun-element"></div>
    </section>

    <!-- About Section -->
    <section id="about" class="about-section">
      <div class="container">
        <div class="section-header">
          <span class="section-number">&lt; 01 &gt;</span>
          <h2 class="section-title">ORIGIN_STORY</h2>
          <div class="title-underline"></div>
        </div>

        <div class="about-layout">
          <div class="about-image">
            <div class="image-frame">
              <img src="/cover_photo.jpeg" alt="Sunkissed Band" />
              <div class="frame-corner top-left"></div>
              <div class="frame-corner top-right"></div>
              <div class="frame-corner bottom-left"></div>
              <div class="frame-corner bottom-right"></div>
              <div class="image-scanline"></div>
            </div>
          </div>

          <div class="about-text">
            <div class="text-block">
              <p class="lead-text">
                &gt;&gt; TRANSMISSION INITIATED...
              </p>
              <p>
                Two friends packed up their lives in Toronto and landed in San Francisco. It wasn't until six months later—after soaking in the Californian sun and feeling the late-night breeze—the music started flowing.
              </p>
              <p>
                What emerged was a hazy blend of indie rock, surf-tinged guitars, dreamy bedroom pop, and the occasional psychedelic drift. Now a four-piece, sunkissed makes music that feels like sun-faded memories—nostalgic, a little restless, and entirely their own.
              </p>
            </div>

            <div class="text-divider">
              <span class="divider-line"></span>
              <span class="divider-icon">◆</span>
              <span class="divider-line"></span>
            </div>

            <div class="text-block">
              <p>
                Their debut single, <strong>"On the Sun Kissed Hills of San Francisco,"</strong> is a raw, honest reflection on leaving Toronto for San Francisco. The song emerged from a simple guitar riff during a moment of inspiration.
              </p>
              <p>
                Their newest single, <strong>Echos</strong>, is an energetic track that contrasts the tension between the joy of experiencing something new with the nostalgia of letting go of the past.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Music Section -->
    <section id="music" class="music-section">
      <div class="container">
        <div class="section-header">
          <span class="section-number">&lt; 02 &gt;</span>
          <h2 class="section-title">AUDIO_STREAMS</h2>
          <div class="title-underline"></div>
        </div>

        <div class="platforms-grid">
          {musicPlatforms.map((platform, index) => (
            <a
              href={platform.url}
              target="_blank"
              rel="noopener noreferrer"
              class="platform-card"
            >
              <div class="card-glow"></div>
              <div class="platform-header">
                <span class="platform-index">0{index + 1}</span>
                <svg viewBox="0 0 24 24" class="platform-icon">
                  <path d={platform.icon} fill="currentColor" />
                </svg>
              </div>
              <div class="platform-info">
                <span class="platform-name">{platform.name.toUpperCase()}</span>
                <span class="platform-action">CONNECT →</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact-section">
      <div class="container">
        <div class="section-header">
          <span class="section-number">&lt; 03 &gt;</span>
          <h2 class="section-title">UPLINK</h2>
          <div class="title-underline"></div>
        </div>

        <div class="contact-grid">
          <div class="social-panel">
            <h3 class="panel-title">// SOCIAL_NODES</h3>
            <div class="social-links">
              {socialLinks.filter(l => ['Instagram', 'TikTok'].includes(l.name)).map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="social-link"
                >
                  <svg viewBox="0 0 24 24" class="social-icon">
                    <path d={link.icon} fill="currentColor" />
                  </svg>
                  <span class="social-name">{link.name.toUpperCase()}</span>
                  <span class="social-arrow">→</span>
                </a>
              ))}
            </div>
          </div>

          <div class="newsletter-panel">
            <h3 class="panel-title">// DATA_SYNC</h3>
            <p class="newsletter-desc">
              Subscribe to receive transmissions about new releases, shows, and exclusive content.
            </p>
            <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="newsletter-form">
              <div class="input-wrapper">
                <span class="input-prefix">&gt;</span>
                <input type="email" name="email" placeholder="ENTER_EMAIL" required />
              </div>
              <button type="submit" class="btn-synthwave"><span>TRANSMIT</span></button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <p class="copyright">&copy; 2024 SUNKISSED</p>
          <p class="footer-tag">BROADCAST FROM THE GRID</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --neon-magenta: #FF00FF;
    --neon-cyan: #00FFFF;
    --hot-pink: #FF1493;
    --electric-blue: #0066FF;
    --deep-purple: #1A0030;
    --void-black: #0D0015;
    --chrome-silver: #C0C0C0;
    --sunset-orange: #FF6B00;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Rajdhani', sans-serif;
    background-color: var(--void-black);
    color: #fff;
    line-height: 1.6;
    position: relative;
    overflow-x: hidden;
  }

  /* CRT Overlay */
  .crt-overlay {
    position: fixed;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent 0px,
      transparent 2px,
      rgba(0, 255, 255, 0.03) 2px,
      rgba(0, 255, 255, 0.03) 4px
    );
    pointer-events: none;
    z-index: 9999;
    animation: crt-flicker 0.15s infinite;
  }

  @keyframes crt-flicker {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.97; }
  }

  /* VHS Tracking */
  .vhs-tracking {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 8px;
    background: linear-gradient(90deg, transparent, var(--neon-magenta), transparent);
    opacity: 0;
    pointer-events: none;
    z-index: 10000;
    animation: vhs-track 12s ease-in-out infinite;
  }

  @keyframes vhs-track {
    0%, 90% { opacity: 0; top: 0; }
    92% { opacity: 0.8; top: 25%; }
    94% { opacity: 0.8; top: 50%; }
    96% { opacity: 0.8; top: 75%; }
    98%, 100% { opacity: 0; top: 100%; }
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Style Switcher */
  .style-switcher {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(13, 0, 21, 0.9);
    border: 1px solid var(--neon-cyan);
    padding: 10px 20px;
    display: flex;
    gap: 15px;
    align-items: center;
    z-index: 10000;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 2px;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
  }

  .switcher-label {
    color: var(--neon-cyan);
    font-family: 'Orbitron', sans-serif;
  }

  .style-switcher a {
    color: var(--chrome-silver);
    text-decoration: none;
    padding: 4px 10px;
    transition: all 0.3s ease;
    font-family: 'Orbitron', sans-serif;
  }

  .style-switcher a:hover,
  .style-switcher a.active {
    color: var(--neon-magenta);
    text-shadow: 0 0 10px var(--neon-magenta);
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: linear-gradient(180deg, var(--void-black) 0%, var(--deep-purple) 50%, #2D0050 100%);
    padding: 4rem 2rem;
    overflow: hidden;
  }

  /* Neon Grid */
  .neon-grid {
    position: absolute;
    bottom: 0;
    left: -50%;
    width: 200%;
    height: 60%;
    background:
      linear-gradient(90deg,
        transparent 0%,
        transparent 49%,
        var(--neon-magenta) 49.5%,
        var(--neon-magenta) 50.5%,
        transparent 51%,
        transparent 100%
      ),
      linear-gradient(0deg,
        var(--neon-cyan) 0%,
        var(--neon-cyan) 1%,
        transparent 1%,
        transparent 100%
      );
    background-size: 100px 100%, 100% 60px;
    transform: perspective(500px) rotateX(60deg);
    transform-origin: center bottom;
    animation: grid-scroll 20s linear infinite;
    mask-image: linear-gradient(to top, white 0%, transparent 80%);
    -webkit-mask-image: linear-gradient(to top, white 0%, transparent 80%);
    opacity: 0.6;
  }

  @keyframes grid-scroll {
    0% { background-position: 0 0, 0 0; }
    100% { background-position: 0 0, 0 60px; }
  }

  /* Sun Element */
  .sun-element {
    position: absolute;
    bottom: 15%;
    left: 50%;
    transform: translateX(-50%);
    width: 400px;
    height: 200px;
    background: linear-gradient(180deg,
      var(--sunset-orange) 0%,
      var(--hot-pink) 30%,
      var(--neon-magenta) 60%,
      transparent 100%
    );
    border-radius: 200px 200px 0 0;
    opacity: 0.8;
    animation: sun-pulse 4s ease-in-out infinite;
  }

  .sun-element::before {
    content: '';
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent 0px,
      transparent 8px,
      rgba(0, 0, 0, 0.3) 8px,
      rgba(0, 0, 0, 0.3) 12px
    );
  }

  @keyframes sun-pulse {
    0%, 100% { opacity: 0.8; transform: translateX(-50%) scale(1); }
    50% { opacity: 1; transform: translateX(-50%) scale(1.02); }
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .logo-container {
    position: relative;
    display: inline-block;
    margin-bottom: 2rem;
  }

  .logo {
    width: 200px;
    height: auto;
    position: relative;
    z-index: 1;
    filter: brightness(1.2) contrast(1.1);
  }

  .logo-glow {
    position: absolute;
    inset: -20px;
    background: radial-gradient(circle, var(--neon-cyan) 0%, transparent 70%);
    opacity: 0.5;
    animation: logo-breathe 3s ease-in-out infinite;
    z-index: 0;
  }

  @keyframes logo-breathe {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.1); }
  }

  .hero-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 6rem;
    font-weight: 900;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    line-height: 1;
  }

  .chromatic {
    position: relative;
    color: #fff;
    text-shadow:
      -4px 0 var(--neon-cyan),
      4px 0 var(--neon-magenta);
    animation: chromatic-shift 3s ease-in-out infinite;
  }

  @keyframes chromatic-shift {
    0%, 100% {
      text-shadow: -4px 0 var(--neon-cyan), 4px 0 var(--neon-magenta);
    }
    50% {
      text-shadow: -6px 0 var(--neon-cyan), 6px 0 var(--neon-magenta);
    }
  }

  .hero-tagline {
    font-family: 'Orbitron', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 4px;
    color: var(--chrome-silver);
    margin-bottom: 3rem;
  }

  .tagline-bracket {
    color: var(--neon-cyan);
  }

  .hero-cta {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-synthwave,
  .btn-synthwave-outline {
    padding: 16px 48px;
    font-family: 'Orbitron', sans-serif;
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 3px;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    clip-path: polygon(12px 0, 100% 0, 100% calc(100% - 12px), calc(100% - 12px) 100%, 0 100%, 0 12px);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .btn-synthwave {
    background: transparent;
    border: 2px solid var(--neon-magenta);
    color: var(--neon-magenta);
  }

  .btn-synthwave::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--neon-magenta);
    opacity: 0;
    transition: opacity 0.3s;
    z-index: -1;
  }

  .btn-synthwave:hover {
    color: var(--void-black);
    box-shadow:
      0 0 20px var(--neon-magenta),
      0 0 40px var(--neon-magenta),
      0 0 60px var(--neon-magenta);
  }

  .btn-synthwave:hover::before {
    opacity: 1;
  }

  .btn-synthwave-outline {
    background: transparent;
    border: 2px solid var(--neon-cyan);
    color: var(--neon-cyan);
  }

  .btn-synthwave-outline:hover {
    background: var(--neon-cyan);
    color: var(--void-black);
    box-shadow:
      0 0 20px var(--neon-cyan),
      0 0 40px var(--neon-cyan);
  }

  /* Section Styles */
  section {
    padding: 6rem 0;
    position: relative;
  }

  .section-header {
    margin-bottom: 4rem;
    text-align: center;
  }

  .section-number {
    font-family: 'Orbitron', sans-serif;
    font-size: 1rem;
    color: var(--neon-cyan);
    letter-spacing: 4px;
    display: block;
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: #fff;
    text-shadow: 0 0 20px rgba(255, 0, 255, 0.5);
  }

  .title-underline {
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--neon-magenta), transparent);
    margin: 1.5rem auto 0;
  }

  /* About Section */
  .about-section {
    background: linear-gradient(180deg, var(--deep-purple) 0%, var(--void-black) 100%);
  }

  .about-layout {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 4rem;
    align-items: center;
  }

  .image-frame {
    position: relative;
    padding: 3px;
    background: linear-gradient(135deg, var(--neon-cyan), var(--neon-magenta));
  }

  .image-frame img {
    width: 100%;
    height: auto;
    display: block;
    filter: saturate(1.2) contrast(1.1);
  }

  .frame-corner {
    position: absolute;
    width: 20px;
    height: 20px;
    border: 2px solid var(--neon-cyan);
  }

  .frame-corner.top-left {
    top: -8px;
    left: -8px;
    border-right: none;
    border-bottom: none;
  }

  .frame-corner.top-right {
    top: -8px;
    right: -8px;
    border-left: none;
    border-bottom: none;
  }

  .frame-corner.bottom-left {
    bottom: -8px;
    left: -8px;
    border-right: none;
    border-top: none;
  }

  .frame-corner.bottom-right {
    bottom: -8px;
    right: -8px;
    border-left: none;
    border-top: none;
  }

  .image-scanline {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent 0px,
      transparent 4px,
      rgba(0, 0, 0, 0.1) 4px,
      rgba(0, 0, 0, 0.1) 8px
    );
    pointer-events: none;
  }

  .text-block p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: var(--chrome-silver);
  }

  .lead-text {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.2rem !important;
    color: var(--neon-cyan) !important;
    letter-spacing: 2px;
  }

  .text-block strong {
    color: var(--neon-magenta);
    font-weight: 600;
  }

  .text-divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 2rem 0;
  }

  .divider-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--neon-cyan), transparent);
  }

  .divider-icon {
    color: var(--neon-magenta);
    font-size: 0.8rem;
  }

  /* Music Section */
  .music-section {
    background: var(--void-black);
  }

  .platforms-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .platform-card {
    position: relative;
    background: rgba(26, 0, 48, 0.8);
    border: 1px solid var(--neon-magenta);
    padding: 2rem;
    text-decoration: none;
    color: #fff;
    transition: all 0.4s ease;
    overflow: hidden;
  }

  .card-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, var(--neon-magenta) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .platform-card:hover .card-glow {
    opacity: 0.2;
  }

  .platform-card:hover {
    border-color: var(--neon-cyan);
    box-shadow:
      0 0 20px rgba(0, 255, 255, 0.3),
      inset 0 0 20px rgba(0, 255, 255, 0.1);
    transform: translateY(-5px);
  }

  .platform-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 1;
  }

  .platform-index {
    font-family: 'Orbitron', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--neon-magenta);
    opacity: 0.5;
  }

  .platform-icon {
    width: 40px;
    height: 40px;
    color: var(--neon-cyan);
  }

  .platform-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .platform-name {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 2px;
  }

  .platform-action {
    font-family: 'Orbitron', sans-serif;
    font-size: 0.8rem;
    color: var(--neon-cyan);
    letter-spacing: 2px;
    transition: transform 0.3s ease;
  }

  .platform-card:hover .platform-action {
    transform: translateX(5px);
  }

  /* Contact Section */
  .contact-section {
    background: linear-gradient(180deg, var(--void-black) 0%, var(--deep-purple) 100%);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
  }

  .panel-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 2px;
    color: var(--neon-cyan);
    margin-bottom: 2rem;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: rgba(26, 0, 48, 0.5);
    border: 1px solid transparent;
    text-decoration: none;
    color: #fff;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    border-color: var(--neon-magenta);
    background: rgba(255, 0, 255, 0.1);
  }

  .social-icon {
    width: 24px;
    height: 24px;
    color: var(--neon-magenta);
  }

  .social-name {
    font-family: 'Orbitron', sans-serif;
    font-size: 0.9rem;
    letter-spacing: 2px;
    flex: 1;
  }

  .social-arrow {
    color: var(--neon-cyan);
    transition: transform 0.3s ease;
  }

  .social-link:hover .social-arrow {
    transform: translateX(5px);
  }

  .newsletter-panel {
    background: rgba(26, 0, 48, 0.5);
    border: 1px solid var(--neon-magenta);
    padding: 2.5rem;
  }

  .newsletter-desc {
    color: var(--chrome-silver);
    font-size: 1.1rem;
