---
import { socialLinks, musicPlatforms } from '../data/socialLinks.js';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Sunkissed - Indie Rock Band" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Syne:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <title>Sunkissed - Dreamy</title>
  </head>
  <body>
    <!-- Star Field -->
    <div class="star-field"></div>

    <!-- Aurora Layers -->
    <div class="aurora-container">
      <div class="aurora-layer aurora-1"></div>
      <div class="aurora-layer aurora-2"></div>
      <div class="aurora-layer aurora-3"></div>
    </div>

    <!-- Floating Orbs -->
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>

    <!-- Style Switcher -->
    <nav class="style-switcher">
      <span class="switcher-label">STYLE</span>
      <a href="/">Original</a>
      <a href="/synthwave">Synthwave</a>
      <a href="/zine">Zine</a>
      <a href="/y2k">Y2K</a>
      <a href="/vintage">Vintage</a>
      <a href="/dreamy" class="active">Dreamy</a>
      <a href="/grunge">Grunge</a>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <div class="logo-container">
          <img src="/logo.png" alt="Sunkissed" class="logo" />
          <div class="logo-halo"></div>
        </div>

        <h1 class="hero-title reveal-text">
          <span class="title-line">Sunkissed</span>
        </h1>

        <p class="hero-tagline">
          <span class="holographic">Indie Rock from San Francisco</span>
        </p>

        <div class="hero-cta">
          <a href="#music" class="btn-ethereal"><span>Listen</span></a>
          <a href="#about" class="btn-ethereal-outline"><span>Explore</span></a>
        </div>
      </div>

      <div class="scroll-indicator">
        <span class="scroll-text">Scroll</span>
        <div class="scroll-line"></div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">
            <span class="holographic">The Story</span>
          </h2>
        </div>

        <div class="about-layout">
          <div class="about-image">
            <div class="image-glow">
              <img src="/cover_photo.jpeg" alt="Sunkissed Band" />
              <div class="image-ring"></div>
            </div>
          </div>

          <div class="about-text">
            <div class="text-block glass-card">
              <p class="lead-text">
                A journey that began with a move, not a band.
              </p>
              <p>
                Two friends packed up their lives in Toronto and landed in San Francisco. It wasn't until six months later—after soaking in the Californian sun and feeling the late-night breeze—the music started flowing.
              </p>
              <p>
                What emerged was a hazy blend of indie rock, surf-tinged guitars, dreamy bedroom pop, and the occasional psychedelic drift. Now a four-piece, sunkissed makes music that feels like sun-faded memories—nostalgic, a little restless, and entirely their own.
              </p>
            </div>

            <div class="text-block glass-card">
              <p>
                Their debut single, <strong>"On the Sun Kissed Hills of San Francisco,"</strong> is a raw, honest reflection on leaving Toronto for San Francisco.
              </p>
              <p>
                Their newest single, <strong>Echos</strong>, is an energetic track that contrasts the tension between the joy of experiencing something new with the nostalgia of letting go of the past.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Music Section -->
    <section id="music" class="music-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">
            <span class="holographic">Listen</span>
          </h2>
        </div>

        <div class="platforms-grid">
          {musicPlatforms.map((platform) => (
            <a
              href={platform.url}
              target="_blank"
              rel="noopener noreferrer"
              class="platform-card glass-card"
            >
              <svg viewBox="0 0 24 24" class="platform-icon">
                <path d={platform.icon} fill="currentColor" />
              </svg>
              <span class="platform-name">{platform.name}</span>
              <span class="platform-arrow">→</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">
            <span class="holographic">Connect</span>
          </h2>
        </div>

        <div class="contact-grid">
          <div class="social-panel glass-card">
            <h3 class="panel-title">Follow</h3>
            <div class="social-links">
              {socialLinks.filter(l => ['Instagram', 'TikTok'].includes(l.name)).map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="social-link"
                >
                  <svg viewBox="0 0 24 24" class="social-icon">
                    <path d={link.icon} fill="currentColor" />
                  </svg>
                  <span>{link.name}</span>
                </a>
              ))}
            </div>
          </div>

          <div class="newsletter-panel glass-card">
            <h3 class="panel-title">Newsletter</h3>
            <p class="newsletter-desc">
              Subscribe for updates on new releases, shows, and exclusive content.
            </p>
            <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="newsletter-form">
              <input type="email" name="email" placeholder="your@email.com" required />
              <button type="submit" class="btn-ethereal"><span>Subscribe</span></button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <p class="copyright">© 2024 Sunkissed</p>
          <p class="footer-tag holographic">Made with dreams</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --aurora-violet: #7B2FFF;
    --deep-magenta: #FF00AA;
    --cosmic-blue: #0055FF;
    --nebula-pink: #FF66B2;
    --midnight-blue: #0D0D2B;
    --ethereal-white: #F0EEFF;
    --gold-shimmer: #FFD700;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Syne', sans-serif;
    background-color: var(--midnight-blue);
    color: var(--ethereal-white);
    line-height: 1.7;
    position: relative;
    overflow-x: hidden;
  }

  /* Star Field */
  .star-field {
    position: fixed;
    inset: 0;
    background:
      radial-gradient(1px 1px at 20px 30px, white, transparent),
      radial-gradient(1px 1px at 40px 70px, rgba(255,255,255,0.8), transparent),
      radial-gradient(1px 1px at 90px 40px, rgba(255,255,255,0.6), transparent),
      radial-gradient(2px 2px at 160px 120px, rgba(255,215,0,0.8), transparent),
      radial-gradient(1px 1px at 230px 90px, white, transparent),
      radial-gradient(1px 1px at 300px 180px, rgba(255,255,255,0.7), transparent),
      radial-gradient(1px 1px at 80px 200px, rgba(255,255,255,0.5), transparent),
      radial-gradient(1.5px 1.5px at 180px 50px, var(--nebula-pink), transparent);
    background-size: 350px 300px;
    animation: star-twinkle 6s ease-in-out infinite;
    z-index: -3;
  }

  @keyframes star-twinkle {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  /* Aurora Layers */
  .aurora-container {
    position: fixed;
    inset: 0;
    overflow: hidden;
    z-index: -2;
  }

  .aurora-layer {
    position: absolute;
    width: 200%;
    height: 100%;
    filter: blur(80px);
    opacity: 0.5;
  }

  .aurora-1 {
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(123, 47, 255, 0.4) 30%,
      rgba(255, 0, 170, 0.2) 50%,
      transparent 70%
    );
    top: -20%;
    left: -50%;
    animation: aurora-wave 18s ease-in-out infinite;
  }

  .aurora-2 {
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(0, 85, 255, 0.3) 40%,
      rgba(123, 47, 255, 0.2) 60%,
      transparent 80%
    );
    top: 0;
    left: 0;
    animation: aurora-wave 22s ease-in-out infinite reverse;
    animation-delay: -5s;
  }

  .aurora-3 {
    background: linear-gradient(
      180deg,
      transparent 20%,
      rgba(255, 0, 170, 0.2) 50%,
      rgba(0, 85, 255, 0.3) 70%,
      transparent 90%
    );
    top: 10%;
    left: -30%;
    animation: aurora-wave 25s ease-in-out infinite;
    animation-delay: -10s;
  }

  @keyframes aurora-wave {
    0%, 100% {
      transform: translateX(-10%) translateY(0) scaleY(1);
      opacity: 0.4;
    }
    50% {
      transform: translateX(10%) translateY(-5%) scaleY(1.2);
      opacity: 0.7;
    }
  }

  /* Floating Orbs */
  .orb {
    position: fixed;
    border-radius: 50%;
    filter: blur(60px);
    mix-blend-mode: screen;
    animation: orb-float 20s ease-in-out infinite;
    z-index: -1;
  }

  .orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--aurora-violet) 0%, transparent 70%);
    top: -15%;
    left: -10%;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--deep-magenta) 0%, transparent 70%);
    bottom: -15%;
    right: -10%;
    animation-delay: -7s;
  }

  .orb-3 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, var(--cosmic-blue) 0%, transparent 70%);
    top: 40%;
    left: 50%;
    animation-delay: -14s;
  }

  @keyframes orb-float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(40px, -25px) scale(1.08); }
    50% { transform: translate(-25px, 40px) scale(0.95); }
    75% { transform: translate(-40px, -15px) scale(1.03); }
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  /* Style Switcher */
  .style-switcher {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(13, 13, 43, 0.8);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(123, 47, 255, 0.3);
    border-radius: 50px;
    padding: 10px 24px;
    display: flex;
    gap: 15px;
    align-items: center;
    z-index: 10000;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 1px;
  }

  .switcher-label {
    color: var(--aurora-violet);
    font-weight: 700;
  }

  .style-switcher a {
    color: rgba(240, 238, 255, 0.7);
    text-decoration: none;
    padding: 6px 12px;
    border-radius: 30px;
    transition: all 0.4s ease;
  }

  .style-switcher a:hover,
  .style-switcher a.active {
    background: linear-gradient(135deg, var(--aurora-violet), var(--deep-magenta));
    color: white;
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 4rem 2rem;
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .logo-container {
    position: relative;
    display: inline-block;
    margin-bottom: 2rem;
  }

  .logo {
    width: 180px;
    height: auto;
    position: relative;
    z-index: 1;
    filter: brightness(1.1);
  }

  .logo-halo {
    position: absolute;
    inset: -30px;
    background: radial-gradient(circle, var(--aurora-violet) 0%, transparent 70%);
    opacity: 0.6;
    animation: halo-pulse 4s ease-in-out infinite;
    z-index: 0;
  }

  @keyframes halo-pulse {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.1); }
  }

  .hero-title {
    margin-bottom: 1.5rem;
  }

  .title-line {
    font-family: 'Instrument Serif', serif;
    font-size: 7rem;
    font-weight: 400;
    display: block;
    animation: blur-reveal 1.5s ease-out forwards;
  }

  @keyframes blur-reveal {
    0% {
      filter: blur(15px);
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      filter: blur(0);
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-tagline {
    font-size: 1.3rem;
    font-weight: 500;
    letter-spacing: 3px;
    margin-bottom: 3rem;
  }

  .holographic {
    background: linear-gradient(
      135deg,
      var(--aurora-violet) 0%,
      var(--cosmic-blue) 25%,
      var(--deep-magenta) 50%,
      var(--nebula-pink) 75%,
      var(--aurora-violet) 100%
    );
    background-size: 300% 300%;
    animation: holographic-shift 6s ease-in-out infinite;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @keyframes holographic-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .hero-cta {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-ethereal,
  .btn-ethereal-outline {
    font-family: 'Syne', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    padding: 18px 48px;
    border-radius: 50px;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    transition: all 0.4s ease;
    cursor: pointer;
  }

  .btn-ethereal {
    background: transparent;
    color: var(--ethereal-white);
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .btn-ethereal::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, var(--aurora-violet), var(--deep-magenta), var(--cosmic-blue));
    border-radius: 50px;
    opacity: 0;
    z-index: -1;
    transition: opacity 0.4s ease;
  }

  .btn-ethereal:hover {
    border-color: transparent;
    box-shadow:
      0 0 30px rgba(123, 47, 255, 0.5),
      0 0 60px rgba(255, 0, 170, 0.3);
  }

  .btn-ethereal:hover::before {
    opacity: 1;
  }

  .btn-ethereal-outline {
    background: transparent;
    color: var(--nebula-pink);
    border: 2px solid var(--nebula-pink);
  }

  .btn-ethereal-outline:hover {
    background: var(--nebula-pink);
    color: var(--midnight-blue);
    box-shadow: 0 0 30px rgba(255, 102, 178, 0.4);
  }

  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .scroll-text {
    font-size: 0.75rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    opacity: 0.6;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--ethereal-white), transparent);
    animation: scroll-bounce 2s ease-in-out infinite;
  }

  @keyframes scroll-bounce {
    0%, 100% { transform: scaleY(1); opacity: 0.6; }
    50% { transform: scaleY(1.3); opacity: 1; }
  }

  /* Section Styles */
  section {
    padding: 6rem 0;
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-family: 'Instrument Serif', serif;
    font-size: 4rem;
    font-weight: 400;
  }

  /* Glass Card */
  .glass-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    padding: 2.5rem;
    position: relative;
    overflow: hidden;
    transition: all 0.4s ease;
  }

  .glass-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  }

  .glass-card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(123, 47, 255, 0.08) 0%,
      transparent 50%,
      rgba(255, 0, 170, 0.08) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .glass-card:hover::after {
    opacity: 1;
  }

  /* About Section */
  .about-layout {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    align-items: center;
  }

  .image-glow {
    position: relative;
    display: inline-block;
  }

  .image-glow img {
    width: 100%;
    max-width: 350px;
    height: auto;
    border-radius: 50%;
    position: relative;
    z-index: 1;
  }

  .image-ring {
    position: absolute;
    inset: -10px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--aurora-violet), var(--deep-magenta), var(--cosmic-blue));
    background-size: 200% 200%;
    animation: ring-shift 4s ease-in-out infinite;
    z-index: 0;
  }

  .image-ring::before {
    content: '';
    position: absolute;
    inset: 8px;
    border-radius: 50%;
    background: var(--midnight-blue);
  }

  @keyframes ring-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .text-block {
    margin-bottom: 2rem;
  }

  .text-block:last-child {
    margin-bottom: 0;
  }

  .text-block p {
    font-size: 1.1rem;
    line-height: 1.9;
    margin-bottom: 1.5rem;
    color: rgba(240, 238, 255, 0.85);
  }

  .text-block p:last-child {
    margin-bottom: 0;
  }

  .lead-text {
    font-family: 'Instrument Serif', serif;
    font-size: 1.5rem !important;
    font-style: italic;
    color: var(--ethereal-white) !important;
    margin-bottom: 2rem !important;
  }

  .text-block strong {
    color: var(--nebula-pink);
    font-weight: 600;
  }

  /* Music Section */
  .platforms-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .platform-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    text-decoration: none;
    color: var(--ethereal-white);
  }

  .platform-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(123, 47, 255, 0.2);
  }

  .platform-icon {
    width: 32px;
    height: 32px;
    color: var(--aurora-violet);
    transition: color 0.3s ease;
  }

  .platform-card:hover .platform-icon {
    color: var(--nebula-pink);
  }

  .platform-name {
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 1px;
    flex: 1;
  }

  .platform-arrow {
    font-size: 1.5rem;
    color: var(--aurora-violet);
    transition: transform 0.3s ease;
  }

  .platform-card:hover .platform-arrow {
    transform: translateX(5px);
    color: var(--nebula-pink);
  }

  /* Contact Section */
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 3rem;
  }

  .panel-title {
    font-family: 'Instrument Serif', serif;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: var(--ethereal-white);
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 50px;
    text-decoration: none;
    color: var(--ethereal-white);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: linear-gradient(135deg, var(--aurora-violet), var(--deep-magenta));
    border-color: transparent;
  }

  .social-icon {
    width: 24px;
    height: 24px;
    color: var(--aurora-violet);
  }

  .social-link:hover .social-icon {
    color: white;
  }

  .social-link span {
    font-weight: 600;
    letter-spacing: 1px;
  }

  .newsletter-desc {
    color: rgba(240, 238, 255, 0.7);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .newsletter-form input {
    padding: 16px 24px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    color: var(--ethereal-white);
    font-family: 'Syne', sans-serif;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: var(--aurora-violet);
    box-shadow: 0 0 20px rgba(123, 47, 255, 0.3);
  }

  .newsletter-form input::placeholder {
    color: rgba(240, 238, 255, 0.4);
  }

  /* Footer */
  .footer {
    padding: 3rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
    color: rgba(240, 238, 255, 0.6);
