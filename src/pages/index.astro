---
import { getVisibleLinksByCategory } from '../data/socialLinks.js';
import PressBar from '../components/PressBar.astro';
import MusicShowcase from '../components/MusicShowcase.astro';
import BehindTheScenes from '../components/BehindTheScenes.astro';

const linksByCategory = getVisibleLinksByCategory();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="sunkissed - Indie Rock Band from San Francisco" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Dela+Gothic+One&family=Josefin+Sans:wght@400;600;700&family=Reenie+Beanie&display=swap" rel="stylesheet" />
    <title>sunkissed</title>
  </head>
  <body>
    <!-- Halftone Overlay -->
    <div class="halftone-overlay"></div>

    <!-- Navigation -->
    <nav class="site-nav" id="site-nav">
      <div class="nav-inner">
        <a href="#" class="nav-logo-link"><img src="/logo.png" alt="sunkissed" class="nav-logo" /></a>
        <button class="nav-toggle" id="nav-toggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <div class="nav-links" id="nav-links">
          <a href="#music">Music</a>
          <a href="#photos">Photos</a>
          <a href="#contact">Connect</a>
        </div>
      </div>
    </nav>

    <!-- Hero Section with Photo Background -->
    <section class="hero">
      <div class="hero-bg"></div>
      <div class="hero-gradient-top"></div>
      <div class="hero-gradient-bottom"></div>

      <!-- Hero CTA -->
      <a
        href="https://open.spotify.com/artist/2HpxxPc77ouRakjIwTfAie"
        target="_blank"
        rel="noopener noreferrer"
        class="hero-cta-btn"
      >
        <svg viewBox="0 0 24 24" class="hero-cta-icon" aria-hidden="true">
          <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z" fill="currentColor"/>
        </svg>
        <span>LISTEN ON SPOTIFY</span>
      </a>

      <!-- Scroll Down Indicator -->
      <a href="#music" class="scroll-indicator" id="scroll-indicator" aria-label="Scroll down">
        <svg viewBox="0 0 24 24" width="40" height="40">
          <path d="M7 10l5 5 5-5" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </section>

    <!-- Press Bar -->
    <PressBar />

    <!-- Sun Kissed Dreams Tour -->
    <section class="tour-video-section">
      <div class="container">
        <div class="video-wrapper">
          <span class="video-label">LATEST VIDEO</span>
          <div class="tour-video-container">
            <iframe
              src="https://www.youtube.com/embed/zNSEwreNbI0"
              title="Sun Kissed Dreams Tour"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
        </div>
      </div>
    </section>

    <!-- Music -->
    <MusicShowcase />

    <!-- Behind the Scenes -->
    <BehindTheScenes />

    <!-- Contact Section -->
    <section id="contact" class="contact-section">
      <div class="container">
        <div class="section-header">
          <div class="wavy-title">
            <h2 class="section-title">CONNECT</h2>
          </div>
        </div>

        <div class="newsletter-panel">
          <p class="newsletter-desc">
            Sign up for updates on releases, and tour announcements.
          </p>
          <form name="newsletter" method="POST" data-netlify="true" class="newsletter-form">
            <input type="email" name="email" placeholder="YOUR EMAIL" required />
            <button type="submit" class="btn-vintage"><span>SUBSCRIBE</span></button>
          </form>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container">
        <div class="footer-social">
          {[...linksByCategory.social, ...linksByCategory.events].map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="footer-social-link"
              aria-label={link.ariaLabel}
              title={link.name}
            >
              <svg viewBox="0 0 24 24" class="footer-social-icon" style={link.scale ? `transform: scale(${link.scale})` : ''}>
                <path d={link.icon} fill="currentColor" />
              </svg>
            </a>
          ))}
        </div>
        <div class="footer-content">
          <p class="copyright">© 2024 SUNKISSED</p>
          <p class="footer-tag">☮ PEACE & MUSIC ☮</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --quote-font: 'Reenie Beanie', cursive;
    --quote-color: #C4A000;
    --quote-opacity: 0.45;
    --quote-size: 1.8rem;
    --psychedelic-orange: #FF5500;
    --electric-purple: #8B00FF;
    --acid-yellow: #FFE600;
    --hot-coral: #FF6B6B;
    --deep-teal: #00897B;
    --burnt-umber: #3D0C02;
    --cream-paper: #FFF5E6;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Josefin Sans', sans-serif;
    background-color: var(--cream-paper);
    color: var(--burnt-umber);
    line-height: 1.7;
    position: relative;
    overflow-x: hidden;
  }

  /* Halftone Overlay */
  .halftone-overlay {
    position: fixed;
    inset: 0;
    background: radial-gradient(
      circle,
      var(--burnt-umber) 1px,
      transparent 1px
    );
    background-size: 8px 8px;
    opacity: 0.06;
    mix-blend-mode: multiply;
    pointer-events: none;
    z-index: 9998;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Hero Section with Photo Background */
  .hero {
    min-height: min(100vh, 66.67vw);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 4rem 2rem;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background-image: url('/cover_photo_w_title.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #3a3228;
    z-index: 0;
  }

  .hero-gradient-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 35%;
    background: linear-gradient(180deg, transparent 0%, #3a3228 100%);
    z-index: 1;
    pointer-events: none;
  }

  /* When viewport is more portrait than the image (3:2),
     show full image width instead of cropping sides */
  @media (max-aspect-ratio: 3/2) {
    .hero-bg {
      background-size: 100% auto;
      background-position: top center;
    }
  }

  .hero-gradient-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 140px;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.65) 0%, rgba(0, 0, 0, 0.2) 60%, transparent 100%);
    z-index: 1;
    pointer-events: none;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(255, 245, 230, 0.15) 0%,
      rgba(61, 12, 2, 0.2) 50%,
      rgba(61, 12, 2, 0.3) 100%
    );
    z-index: 1;
    transition: opacity 0.4s ease;
  }

  .hero-overlay.hidden {
    opacity: 0;
  }

  /* Toggle Button */
  .overlay-toggle {
    position: absolute;
    top: 2rem;
    right: 2rem;
    z-index: 100;
    font-family: 'Anton', sans-serif;
    font-size: 0.9rem;
    letter-spacing: 2px;
    padding: 12px 24px;
    background: var(--acid-yellow);
    color: var(--burnt-umber);
    border: 3px solid var(--burnt-umber);
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 4px 4px 0 var(--burnt-umber);
  }

  .overlay-toggle:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 var(--burnt-umber);
  }

  .overlay-toggle.active {
    background: var(--burnt-umber);
    color: var(--acid-yellow);
  }

  .hero-content {
    text-align: center;
    position: absolute;
    bottom: 15%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }

  .hero-title {
    margin-bottom: 0;
  }

  .title-main {
    font-family: 'Anton', sans-serif;
    font-size: 10rem;
    line-height: 0.9;
    letter-spacing: 0.02em;
    color: var(--acid-yellow);
    -webkit-text-stroke: 6px var(--burnt-umber);
    paint-order: stroke fill;
    text-shadow:
      8px 8px 0 var(--psychedelic-orange),
      16px 16px 0 var(--electric-purple);
    display: block;
  }

  .hero-tagline {
    font-family: 'Dela Gothic One', sans-serif;
    font-size: 1.2rem;
    letter-spacing: 6px;
    color: var(--cream-paper);
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    margin-bottom: 3rem;
  }

  .hero-cta {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-vintage,
  .btn-vintage-outline {
    font-family: 'Anton', sans-serif;
    font-size: 1.3rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    padding: 20px 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
  }

  .btn-vintage {
    background: var(--acid-yellow);
    color: var(--burnt-umber);
    border: 4px solid var(--burnt-umber);
    box-shadow:
      6px 6px 0 var(--psychedelic-orange),
      12px 12px 0 var(--hot-coral);
  }

  .btn-vintage:hover {
    transform: translate(-4px, -4px);
    box-shadow:
      10px 10px 0 var(--psychedelic-orange),
      20px 20px 0 var(--hot-coral);
  }

  .btn-vintage-outline {
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(4px);
    color: var(--cream-paper);
    border: 4px solid var(--cream-paper);
    box-shadow: 6px 6px 0 rgba(0,0,0,0.3);
  }

  .btn-vintage-outline:hover {
    background: var(--cream-paper);
    color: var(--burnt-umber);
    transform: translate(-4px, -4px);
    box-shadow: 10px 10px 0 var(--psychedelic-orange);
  }

  /* Section Styles */
  section {
    padding: 6rem 0;
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .wavy-title {
    display: inline-block;
  }

  .section-title {
    font-family: 'Anton', sans-serif;
    font-size: 4rem;
    letter-spacing: 0.05em;
    color: var(--burnt-umber);
    text-shadow: 4px 4px 0 var(--acid-yellow);
  }

  /* Tour Video Section */
  .tour-video-section {
    background: var(--cream-paper);
    padding: 3rem 0 4rem 0;
  }

  .video-wrapper {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  .video-label {
    font-family: 'Anton', sans-serif;
    font-size: 1.2rem;
    letter-spacing: 4px;
    color: var(--burnt-umber);
    display: block;
    margin-bottom: 1rem;
  }

  .tour-quote {
    font-family: var(--quote-font);
    font-size: var(--quote-size);
    line-height: 1.1;
    color: var(--quote-color);
    opacity: var(--quote-opacity);
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .section-buffer {
    background: var(--cream-paper);
    padding: 1.5rem 0;
  }

  .tour-video-container {
    position: relative;
    width: 100%;
    padding-bottom: min(50.625%, 506px);
    height: 0;
    overflow: hidden;
    border: 6px solid var(--burnt-umber);
    box-shadow: 8px 8px 0 var(--psychedelic-orange);
  }

  .tour-video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* About Section */
  .about-section {
    background: var(--cream-paper);
    padding: 1.5rem 0 5rem;
  }

  .video-title {
    font-family: 'Anton', sans-serif;
    font-size: 1.8rem;
    letter-spacing: 4px;
    color: var(--burnt-umber);
    text-align: center;
    margin-bottom: 2rem;
    text-transform: uppercase;
  }

  /* Social Bar Section */
  .social-bar-section {
    background: var(--burnt-umber);
    padding: 3.5rem 0 2rem;
    position: relative;
  }

  .est-badge {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    background: var(--burnt-umber);
    color: var(--cream-paper);
    font-family: 'Josefin Sans', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 3px;
    padding: 0.8rem 2.5rem;
    border-radius: 6px;
    white-space: nowrap;
  }

  .social-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2.5rem;
    flex-wrap: wrap;
  }

  .social-bar-link {
    color: var(--cream-paper);
    transition: all 0.3s ease;
    opacity: 0.8;
  }

  .social-bar-link:hover {
    color: var(--acid-yellow);
    opacity: 1;
    transform: scale(1.15);
  }

  .social-bar-icon {
    width: 32px;
    height: 32px;
  }

  .social-bar-separator {
    color: var(--cream-paper);
    opacity: 0.4;
    font-size: 1.5rem;
    font-weight: 300;
    user-select: none;
  }

  .about-layout {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    align-items: start;
  }

  .image-frame {
    position: relative;
    border: 6px solid var(--burnt-umber);
    padding: 10px;
    background: var(--cream-paper);
    box-shadow: 8px 8px 0 var(--psychedelic-orange);
  }

  .image-frame img {
    width: 100%;
    height: auto;
    display: block;
    filter: sepia(15%) contrast(105%);
  }

  .frame-starburst {
    position: absolute;
    top: -30px;
    right: -30px;
    width: 80px;
    height: 80px;
    background: var(--acid-yellow);
    clip-path: polygon(
      50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%,
      50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    animation: starburst-spin 10s linear infinite;
  }

  @keyframes starburst-spin {
    to { transform: rotate(360deg); }
  }

  .image-label {
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
    font-family: 'Anton', sans-serif;
    font-size: 1.2rem;
    letter-spacing: 4px;
    color: var(--cream-paper);
    background: var(--burnt-umber);
    padding: 8px 20px;
  }

  .text-block p {
    font-size: 1.15rem;
    line-height: 1.9;
    margin-bottom: 1.5rem;
    color: var(--burnt-umber);
  }

  .lead-text {
    font-family: 'Dela Gothic One', sans-serif;
    font-size: 1.3rem !important;
    color: var(--psychedelic-orange) !important;
    text-align: center;
    margin-bottom: 2rem !important;
  }

  .text-block strong {
    color: var(--electric-purple);
    font-weight: 700;
  }

  .text-divider {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
  }

  .star {
    color: var(--psychedelic-orange);
    font-size: 1.5rem;
    animation: star-pulse 2s ease-in-out infinite;
  }

  .star:nth-child(2) { animation-delay: 0.3s; }
  .star:nth-child(3) { animation-delay: 0.6s; }

  @keyframes star-pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.3); opacity: 0.7; }
  }

  /* Music Section */
  .music-section {
    background: var(--burnt-umber);
    color: var(--cream-paper);
  }

  .music-section .section-title {
    color: var(--acid-yellow);
    text-shadow: 4px 4px 0 var(--psychedelic-orange);
  }

  .platforms-list {
    max-width: 700px;
    margin: 0 auto 4rem;
  }

  .platform-item {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    border: 4px solid var(--acid-yellow);
    margin-bottom: -4px;
    text-decoration: none;
    color: var(--cream-paper);
    transition: all 0.3s ease;
    background: var(--burnt-umber);
  }

  .platform-item:hover {
    background: var(--acid-yellow);
    color: var(--burnt-umber);
    transform: translateX(10px);
    box-shadow: -10px 0 0 var(--psychedelic-orange);
  }

  .platform-num {
    font-family: 'Anton', sans-serif;
    font-size: 2rem;
    color: var(--acid-yellow);
    width: 50px;
  }

  .platform-item:hover .platform-num {
    color: var(--burnt-umber);
  }

  .platform-divider {
    color: var(--psychedelic-orange);
  }

  .platform-name {
    font-family: 'Anton', sans-serif;
    font-size: 1.8rem;
    letter-spacing: 3px;
    flex: 1;
  }

  .platform-arrow {
    font-size: 2rem;
    color: var(--psychedelic-orange);
    transition: transform 0.3s ease;
  }

  .platform-item:hover .platform-arrow {
    transform: translateX(10px);
    color: var(--burnt-umber);
  }

  /* Video Section */
  .video-section {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  .video-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    border: 6px solid var(--burnt-umber);
    box-shadow: 8px 8px 0 var(--psychedelic-orange);
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Contact Section */
  .contact-section {
    background: var(--cream-paper);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 3rem;
  }

  .social-panel,
  .newsletter-panel {
    border: 4px solid var(--burnt-umber);
    padding: 2.5rem;
    background: var(--cream-paper);
  }

  .panel-title {
    font-family: 'Dela Gothic One', sans-serif;
    font-size: 1.1rem;
    letter-spacing: 3px;
    color: var(--psychedelic-orange);
    margin-bottom: 2rem;
    text-align: center;
  }

  .social-stack {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    border: 3px solid var(--burnt-umber);
    text-decoration: none;
    color: var(--burnt-umber);
    font-family: 'Anton', sans-serif;
    font-size: 1.2rem;
    letter-spacing: 2px;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--acid-yellow);
    transform: translateX(5px);
    box-shadow: 5px 5px 0 var(--burnt-umber);
  }

  .social-icon {
    width: 28px;
    height: 28px;
    color: var(--psychedelic-orange);
  }

  .email-contact {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 3px dashed var(--burnt-umber);
    text-align: center;
  }

  .email-contact p {
    font-size: 1rem;
    color: var(--burnt-umber);
  }

  .email-contact a {
    color: var(--electric-purple);
    text-decoration: underline;
    font-weight: 600;
  }

  .email-contact a:hover {
    color: var(--psychedelic-orange);
  }

  .newsletter-panel {
    max-width: 700px;
    width: 70%;
    margin: 0 auto;
    border: 4px solid var(--burnt-umber);
    padding: 2.5rem;
    background: var(--cream-paper);
    box-shadow: 8px 8px 0 var(--acid-yellow);
  }

  .newsletter-desc {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    text-align: center;
    color: var(--burnt-umber);
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .newsletter-form input {
    padding: 16px 20px;
    font-family: 'Josefin Sans', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 2px;
    border: 3px solid var(--burnt-umber);
    background: var(--cream-paper);
    color: var(--burnt-umber);
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: var(--psychedelic-orange);
    box-shadow: 4px 4px 0 var(--acid-yellow);
  }

  .newsletter-form input::placeholder {
    color: var(--burnt-umber);
    opacity: 0.5;
  }

  /* Footer */
  .footer {
    padding: 3rem 0;
    background: var(--burnt-umber);
    border-top: 6px solid var(--acid-yellow);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
