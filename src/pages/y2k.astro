---
import { socialLinks, musicPlatforms } from '../data/socialLinks.js';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Sunkissed - Indie Rock Band" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Mono+One&family=Space+Mono:wght@400;700&family=Unbounded:wght@300;400;700;900&display=swap" rel="stylesheet" />
    <title>Sunkissed - Y2K</title>
  </head>
  <body>
    <!-- Mesh Background -->
    <div class="mesh-bg"></div>

    <!-- Floating Blobs -->
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>

    <!-- Sparkles -->
    <div class="sparkle sparkle-1"></div>
    <div class="sparkle sparkle-2"></div>
    <div class="sparkle sparkle-3"></div>
    <div class="sparkle sparkle-4"></div>

    <!-- Style Switcher -->
    <nav class="style-switcher">
      <span class="switcher-label">STYLE</span>
      <a href="/">Original</a>
      <a href="/synthwave">Synthwave</a>
      <a href="/zine">Zine</a>
      <a href="/y2k" class="active">Y2K</a>
      <a href="/vintage">Vintage</a>
      <a href="/dreamy">Dreamy</a>
      <a href="/grunge">Grunge</a>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <div class="logo-container">
          <img src="/logo.png" alt="Sunkissed" class="logo" />
          <div class="logo-ring"></div>
        </div>

        <h1 class="hero-title">
          <span class="chrome-text">SUNKISSED</span>
        </h1>

        <p class="hero-tagline">
          <span class="warp-text">INDIE ROCK FROM SF</span>
        </p>

        <div class="hero-cta">
          <a href="#music" class="btn-acid"><span>LISTEN</span></a>
          <a href="#about" class="btn-acid-outline"><span>EXPLORE</span></a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title holographic">THE STORY</h2>
        </div>

        <div class="about-layout">
          <div class="about-image">
            <div class="image-circle">
              <img src="/cover_photo.jpeg" alt="Sunkissed Band" />
              <div class="circle-ring"></div>
            </div>
          </div>

          <div class="about-text">
            <div class="text-block">
              <p class="lead-text">
                ✦ ORIGIN STORY ✦
              </p>
              <p>
                Two friends packed up their lives in Toronto and landed in San Francisco. It wasn't until six months later—after soaking in the Californian sun and feeling the late-night breeze—the music started flowing.
              </p>
              <p>
                What emerged was a hazy blend of indie rock, surf-tinged guitars, dreamy bedroom pop, and the occasional psychedelic drift. Now a four-piece, sunkissed makes music that feels like sun-faded memories—nostalgic, a little restless, and entirely their own.
              </p>
            </div>

            <div class="divider-blob"></div>

            <div class="text-block">
              <p>
                Their debut single, <strong>"On the Sun Kissed Hills of San Francisco,"</strong> is a raw, honest reflection on leaving Toronto for San Francisco.
              </p>
              <p>
                Their newest single, <strong>Echos</strong>, is an energetic track that contrasts the tension between the joy of experiencing something new with the nostalgia of letting go of the past.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Music Section -->
    <section id="music" class="music-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title holographic">LISTEN</h2>
        </div>

        <div class="platforms-grid">
          {musicPlatforms.map((platform) => (
            <a
              href={platform.url}
              target="_blank"
              rel="noopener noreferrer"
              class="platform-pill"
            >
              <svg viewBox="0 0 24 24" class="platform-icon">
                <path d={platform.icon} fill="currentColor" />
              </svg>
              <span class="platform-name">{platform.name.toUpperCase()}</span>
              <span class="platform-arrow">→</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title holographic">CONNECT</h2>
        </div>

        <div class="contact-grid">
          <div class="social-panel glass-card">
            <h3 class="panel-title">★ SOCIALS ★</h3>
            <div class="social-bubbles">
              {socialLinks.filter(l => ['Instagram', 'TikTok'].includes(l.name)).map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="social-bubble"
                >
                  <svg viewBox="0 0 24 24" class="social-icon">
                    <path d={link.icon} fill="currentColor" />
                  </svg>
                  <span>{link.name}</span>
                </a>
              ))}
            </div>
          </div>

          <div class="newsletter-panel glass-card">
            <h3 class="panel-title">★ NEWSLETTER ★</h3>
            <p class="newsletter-desc">
              Subscribe for updates on new releases, shows, and exclusive content.
            </p>
            <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="newsletter-form">
              <input type="email" name="email" placeholder="your@email.com" required />
              <button type="submit" class="btn-acid"><span>SUBSCRIBE</span></button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <p class="copyright">© 2024 SUNKISSED</p>
          <p class="footer-tag holographic">✦ MADE WITH LOVE ✦</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --acid-lime: #CCFF00;
    --toxic-green: #00FF66;
    --chrome-blue: #00BFFF;
    --hot-magenta: #FF00AA;
    --electric-orange: #FF6600;
    --liquid-silver: #E8E8E8;
    --void-black: #0A0A0A;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Space Mono', monospace;
    background-color: var(--void-black);
    color: #fff;
    line-height: 1.6;
    position: relative;
    overflow-x: hidden;
  }

  /* Mesh Background */
  .mesh-bg {
    position: fixed;
    inset: 0;
    background:
      radial-gradient(ellipse at 20% 30%, var(--acid-lime) 0%, transparent 40%),
      radial-gradient(ellipse at 80% 20%, var(--chrome-blue) 0%, transparent 35%),
      radial-gradient(ellipse at 60% 80%, var(--hot-magenta) 0%, transparent 40%),
      radial-gradient(ellipse at 10% 90%, var(--electric-orange) 0%, transparent 35%),
      var(--void-black);
    opacity: 0.4;
    animation: mesh-morph 20s ease-in-out infinite;
    z-index: -2;
  }

  @keyframes mesh-morph {
    0%, 100% {
      background-position: 0% 0%, 100% 0%, 50% 100%, 0% 100%;
    }
    50% {
      background-position: 30% 20%, 70% 30%, 80% 70%, 20% 80%;
    }
  }

  /* Floating Blobs */
  .blob {
    position: fixed;
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    filter: blur(60px);
    opacity: 0.5;
    z-index: -1;
    animation: blob-morph 12s ease-in-out infinite;
  }

  .blob-1 {
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, var(--acid-lime), var(--toxic-green));
    top: -10%;
    left: -10%;
  }

  .blob-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, var(--hot-magenta), var(--electric-orange));
    bottom: -10%;
    right: -10%;
    animation-delay: -4s;
  }

  .blob-3 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, var(--chrome-blue), var(--hot-magenta));
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: -8s;
  }

  @keyframes blob-morph {
    0%, 100% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      transform: translate(0, 0) scale(1);
    }
    25% {
      border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
      transform: translate(30px, -20px) scale(1.05);
    }
    50% {
      border-radius: 50% 60% 30% 60% / 30% 40% 70% 50%;
      transform: translate(-20px, 30px) scale(0.95);
    }
    75% {
      border-radius: 60% 30% 60% 40% / 70% 50% 40% 60%;
      transform: translate(-30px, -10px) scale(1.02);
    }
  }

  /* Sparkles */
  .sparkle {
    position: fixed;
    width: 20px;
    height: 20px;
    z-index: 0;
    pointer-events: none;
  }

  .sparkle::before,
  .sparkle::after {
    content: '';
    position: absolute;
    background: var(--acid-lime);
  }

  .sparkle::before {
    width: 100%;
    height: 4px;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .sparkle::after {
    width: 4px;
    height: 100%;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
  }

  .sparkle-1 { top: 15%; left: 10%; animation: sparkle-pulse 2s ease-in-out infinite; }
  .sparkle-2 { top: 25%; right: 15%; animation: sparkle-pulse 2.5s ease-in-out infinite 0.5s; }
  .sparkle-3 { bottom: 30%; left: 20%; animation: sparkle-pulse 2s ease-in-out infinite 1s; }
  .sparkle-4 { bottom: 20%; right: 25%; animation: sparkle-pulse 2.5s ease-in-out infinite 1.5s; }

  @keyframes sparkle-pulse {
    0%, 100% { transform: scale(1) rotate(0deg); opacity: 1; }
    50% { transform: scale(1.5) rotate(45deg); opacity: 0.6; }
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  /* Style Switcher */
  .style-switcher {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(10, 10, 10, 0.8);
    backdrop-filter: blur(10px);
    border: 2px solid var(--acid-lime);
    border-radius: 100px;
    padding: 10px 24px;
    display: flex;
    gap: 15px;
    align-items: center;
    z-index: 10000;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 1px;
  }

  .switcher-label {
    color: var(--acid-lime);
    font-family: 'Unbounded', sans-serif;
    font-weight: 700;
  }

  .style-switcher a {
    color: var(--liquid-silver);
    text-decoration: none;
    padding: 6px 12px;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .style-switcher a:hover,
  .style-switcher a.active {
    background: linear-gradient(135deg, var(--acid-lime), var(--toxic-green));
    color: var(--void-black);
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 4rem 2rem;
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .logo-container {
    position: relative;
    display: inline-block;
    margin-bottom: 2rem;
  }

  .logo {
    width: 180px;
    height: auto;
    position: relative;
    z-index: 1;
    border-radius: 50%;
    padding: 10px;
    background: var(--void-black);
  }

  .logo-ring {
    position: absolute;
    inset: -10px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--acid-lime), var(--chrome-blue), var(--hot-magenta), var(--acid-lime));
    background-size: 300% 300%;
    animation: ring-rotate 4s linear infinite;
    z-index: 0;
  }

  .logo-ring::before {
    content: '';
    position: absolute;
    inset: 4px;
    border-radius: 50%;
    background: var(--void-black);
  }

  @keyframes ring-rotate {
    0% { background-position: 0% 50%; }
    100% { background-position: 300% 50%; }
  }

  .hero-title {
    margin-bottom: 1.5rem;
  }

  .chrome-text {
    font-family: 'Rubik Mono One', monospace;
    font-size: 6rem;
    background: linear-gradient(
      180deg,
      #FFFFFF 0%,
      #E8E8E8 15%,
      #B0B0B0 30%,
      #505050 45%,
      #B0B0B0 55%,
      #E8E8E8 70%,
      #FFFFFF 85%,
      #E8E8E8 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(2px 2px 0 rgba(0, 0, 0, 0.5));
    animation: chrome-shine 4s ease-in-out infinite;
  }

  @keyframes chrome-shine {
    0%, 100% { filter: drop-shadow(2px 2px 0 rgba(0, 0, 0, 0.5)) brightness(1); }
    50% { filter: drop-shadow(4px 4px 0 rgba(0, 0, 0, 0.3)) brightness(1.15); }
  }

  .hero-tagline {
    margin-bottom: 3rem;
  }

  .warp-text {
    font-family: 'Unbounded', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 6px;
    color: var(--acid-lime);
    animation: text-warp 5s ease-in-out infinite;
    display: inline-block;
  }

  @keyframes text-warp {
    0%, 100% {
      transform: perspective(500px) rotateX(0deg) scaleY(1);
    }
    25% {
      transform: perspective(500px) rotateX(5deg) scaleY(1.05);
    }
    75% {
      transform: perspective(500px) rotateX(-5deg) scaleY(0.97);
    }
  }

  .hero-cta {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-acid,
  .btn-acid-outline {
    font-family: 'Space Mono', monospace;
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    padding: 18px 48px;
    border-radius: 100px;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    transition: all 0.4s ease;
    cursor: pointer;
  }

  .btn-acid {
    background: transparent;
    border: 3px solid var(--acid-lime);
    color: var(--acid-lime);
  }

  .btn-acid::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--acid-lime), var(--toxic-green));
    border-radius: 100px;
    transform: translateX(-100%);
    transition: transform 0.4s ease;
    z-index: -1;
  }

  .btn-acid:hover {
    color: var(--void-black);
    border-color: transparent;
    box-shadow: 0 0 30px rgba(204, 255, 0, 0.5);
  }

  .btn-acid:hover::before {
    transform: translateX(0);
  }

  .btn-acid span,
  .btn-acid-outline span {
    position: relative;
    z-index: 1;
  }

  .btn-acid-outline {
    background: transparent;
    border: 3px solid var(--hot-magenta);
    color: var(--hot-magenta);
  }

  .btn-acid-outline:hover {
    background: var(--hot-magenta);
    color: var(--void-black);
    box-shadow: 0 0 30px rgba(255, 0, 170, 0.5);
  }

  /* Section Styles */
  section {
    padding: 6rem 0;
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-family: 'Rubik Mono One', monospace;
    font-size: 3.5rem;
    letter-spacing: 0.1em;
  }

  .holographic {
    background: linear-gradient(
      135deg,
      var(--acid-lime) 0%,
      var(--chrome-blue) 25%,
      var(--hot-magenta) 50%,
      var(--electric-orange) 75%,
      var(--acid-lime) 100%
    );
    background-size: 300% 300%;
    animation: holographic-shift 6s ease-in-out infinite;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @keyframes holographic-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* About Section */
  .about-layout {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    align-items: center;
  }

  .image-circle {
    position: relative;
    width: 300px;
    height: 300px;
    margin: 0 auto;
  }

  .image-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    position: relative;
    z-index: 1;
  }

  .circle-ring {
    position: absolute;
    inset: -8px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--acid-lime), var(--chrome-blue), var(--hot-magenta));
    background-size: 200% 200%;
    animation: ring-rotate 3s linear infinite;
    z-index: 0;
  }

  .circle-ring::before {
    content: '';
    position: absolute;
    inset: 6px;
    border-radius: 50%;
    background: var(--void-black);
  }

  .text-block p {
    font-size: 1.1rem;
    line-height: 1.9;
    margin-bottom: 1.5rem;
    color: var(--liquid-silver);
  }

  .lead-text {
    font-family: 'Unbounded', sans-serif;
    font-size: 1.2rem !important;
    font-weight: 700;
    color: var(--acid-lime) !important;
    letter-spacing: 3px;
    text-align: center;
    margin-bottom: 2rem !important;
  }

  .text-block strong {
    color: var(--hot-magenta);
    font-weight: 700;
  }

  .divider-blob {
    width: 80px;
    height: 80px;
    margin: 2rem auto;
    background: linear-gradient(135deg, var(--acid-lime), var(--chrome-blue));
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    animation: blob-morph 8s ease-in-out infinite;
    opacity: 0.7;
  }

  /* Music Section */
  .platforms-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .platform-pill {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem 2rem;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid transparent;
    border-radius: 100px;
    text-decoration: none;
    color: #fff;
    transition: all 0.4s ease;
  }

  .platform-pill:hover {
    background: rgba(204, 255, 0, 0.1);
    border-color: var(--acid-lime);
    transform: translateX(10px);
    box-shadow: 0 0 30px rgba(204, 255, 0, 0.2);
  }

  .platform-icon {
    width: 32px;
    height: 32px;
    color: var(--acid-lime);
  }

  .platform-name {
    font-family: 'Unbounded', sans-serif;
    font-size: 1.2rem;
    font-weight: 700;
    letter-spacing: 2px;
    flex: 1;
  }

  .platform-arrow {
    font-size: 1.5rem;
    color: var(--acid-lime);
    transition: transform 0.3s ease;
  }

  .platform-pill:hover .platform-arrow {
    transform: translateX(5px);
  }

  /* Contact Section */
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 3rem;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 2.5rem;
    position: relative;
    overflow: hidden;
  }

  .glass-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  }

  .panel-title {
    font-family: 'Unbounded', sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: 3px;
    color: var(--acid-lime);
    margin-bottom: 2rem;
    text-align: center;
  }

  .social-bubbles {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .social-bubble {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50px;
    text-decoration: none;
    color: #fff;
    transition: all 0.3s ease;
  }

  .social-bubble:hover {
    background: linear-gradient(135deg, var(--acid-lime), var(--toxic-green));
    color: var(--void-black);
  }

  .social-icon {
    width: 24px;
    height: 24px;
  }

  .social-bubble span {
    font-family: 'Space Mono', monospace;
    font-weight: 700;
    letter-spacing: 2px;
  }

  .newsletter-desc {
    color: var(--liquid-silver);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    text-align: center;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .newsletter-form input {
    padding: 16px 24px;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    color: #fff;
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: var(--acid-lime);
  }

  .newsletter-form input::placeholder {
    color: var(--liquid-silver);
    opacity: 0.5;
  }

  /* Footer */
  .footer {
    padding: 3rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    color: var(--liquid-silver);
  }

  .footer-tag {
    font-family: 'Unbounded', sans-serif;
    font-weight: 700;
    letter-spacing: 2px;
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      transition-duration: 0.01ms !important;
