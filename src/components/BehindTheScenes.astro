// Placeholder for behind-the-scenes photos
// Replace these with actual photo URLs
const photos = [
  {
    src: "/cover_photo.jpeg",
    alt: "Band performing",
    caption: "Live at Brick & Mortar"
  },
  {
    src: "/cover_photo.jpeg",
    alt: "Recording session",
    caption: "In the studio"
  },
  {
    src: "/cover_photo.jpeg",
    alt: "Band hanging out",
    caption: "Behind the scenes"
  },
];
---

<section id="photos" class="bts-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">BEHIND THE SCENES</h2>
    </div>

    <div class="photos-grid">
      {photos.map((photo) => (
        <div class="photo-card">
          <div class="photo-frame">
            <img src={photo.src} alt={photo.alt} loading="lazy" />
          </div>
          <span class="photo-caption">{photo.caption}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .bts-section {
    background: var(--cream-paper);
    padding: 5rem 0;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-family: 'Anton', sans-serif;
    font-size: 4rem;
    letter-spacing: 0.05em;
    color: var(--burnt-umber);
    text-shadow: 4px 4px 0 var(--acid-yellow);
  }

  .photos-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }

  .photo-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .photo-frame {
    position: relative;
    border: 6px solid var(--burnt-umber);
    padding: 8px;
    background: var(--cream-paper);
    box-shadow: 6px 6px 0 var(--psychedelic-orange);
    transition: all 0.3s ease;
  }

  .photo-frame:hover {
    transform: translate(-3px, -3px);
    box-shadow: 9px 9px 0 var(--psychedelic-orange);
  }

  .photo-frame img {
    width: 100%;
    height: 280px;
    object-fit: cover;
    display: block;
    filter: sepia(10%) contrast(105%);
  }

  .photo-caption {
    font-family: 'Anton', sans-serif;
    font-size: 0.9rem;
    letter-spacing: 2px;
    color: var(--burnt-umber);
    text-transform: uppercase;
    text-align: center;
  }

  @media (max-width: 1024px) {
    .photos-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }

    .photos-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .photo-frame {
      box-shadow: 4px 4px 0 var(--psychedelic-orange);
    }

    .photo-frame:hover {
      transform: translate(-2px, -2px);
      box-shadow: 6px 6px 0 var(--psychedelic-orange);
    }

    .photo-frame img {
      height: 240px;
    }
  }
</style>
