<section class="hero">
  <!-- Decorative doodles -->
  <div class="doodles">
    <svg class="doodle doodle-1" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
      <path d="M20 5 L22 15 L32 17 L24 23 L27 33 L20 27 L13 33 L16 23 L8 17 L18 15 Z" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>
    <svg class="doodle doodle-2" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg">
      <circle cx="30" cy="30" r="25" fill="none" stroke="currentColor" stroke-width="2.5"/>
      <circle cx="30" cy="30" r="18" fill="none" stroke="currentColor" stroke-width="2"/>
      <circle cx="30" cy="30" r="11" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>
    <svg class="doodle doodle-3" viewBox="0 0 50 30" xmlns="http://www.w3.org/2000/svg">
      <path d="M2 15 Q 8 5, 16 15 T 34 15 T 48 15" stroke="currentColor" stroke-width="2.5" fill="none" stroke-linecap="round"/>
    </svg>
    <svg class="doodle doodle-4" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
      <path d="M20 5 L22 15 L32 17 L24 23 L27 33 L20 27 L13 33 L16 23 L8 17 L18 15 Z" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>
  </div>

  <div class="hero-content">
    <img src="/logo.png" alt="Sunkissed Logo" class="hero-logo" />
    <p class="tagline">Indie Rock from the Heart</p>
    <div class="cta-buttons">
      <a href="#music" class="btn btn-primary">Listen Now</a>
      <a href="#music" class="btn btn-secondary">Watch Latest Video</a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      180deg,
      var(--color-cream) 0%,
      rgba(253, 185, 39, 0.1) 100%
    );
    padding: 2rem;
    position: relative;
    overflow: hidden;
  }

  /* Decorative doodles */
  .doodles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .doodle {
    position: absolute;
    color: var(--color-sun-orange);
    opacity: 0.15;
  }

  .doodle-1 {
    width: 60px;
    top: 15%;
    left: 10%;
    animation: float 4s ease-in-out infinite;
    animation-delay: 0s;
  }

  .doodle-2 {
    width: 80px;
    top: 60%;
    right: 8%;
    animation: float 5s ease-in-out infinite;
    animation-delay: 1s;
  }

  .doodle-3 {
    width: 100px;
    bottom: 20%;
    left: 5%;
    animation: float 4.5s ease-in-out infinite;
    animation-delay: 0.5s;
  }

  .doodle-4 {
    width: 50px;
    top: 25%;
    right: 15%;
    animation: float 3.5s ease-in-out infinite;
    animation-delay: 1.5s;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    animation: fadeIn 1s ease-out;
    position: relative;
    z-index: 1;
  }

  .hero-logo {
    width: 100%;
    max-width: 400px;
    height: auto;
    margin-bottom: 2rem;
    animation: float 3s ease-in-out infinite;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.1));
  }

  .tagline {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-gray);
    margin-bottom: 2.5rem;
    letter-spacing: 0.5px;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  /* Mobile adjustments */
  @media (max-width: 640px) {
    .hero {
      min-height: 90vh;
    }

    .hero-logo {
      max-width: 280px;
    }

    .tagline {
      font-size: 1.25rem;
    }

    .cta-buttons {
      flex-direction: column;
      gap: 1rem;
    }

    .btn {
      width: 100%;
      max-width: 280px;
    }

    .doodle {
      opacity: 0.08;
    }

    .doodle-1,
    .doodle-4 {
      display: none;
    }
  }
</style>
