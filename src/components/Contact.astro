---
import { socialMedia } from '../data/socialLinks.js';
---

<section id="contact" class="contact-section section">
  <div class="container">
    <div class="contact-grid">
      <div class="contact-info">
        <h2>Stay Connected</h2>
        <p class="contact-intro">
          Follow us on social media and stay up to date with new releases, tour
          dates, and behind-the-scenes content.
        </p>

        <div class="social-links">
          {socialMedia.map(link => (
            <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={link.ariaLabel}>
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d={link.icon} />
              </svg>
            </a>
          ))}
        </div>

        <div class="email-contact">
          <p><strong>Email:</strong> <a href="mailto:hello@sunkissedband.com">hello@sunkissedband.com</a></p>
        </div>
      </div>

      <div class="newsletter">
        <h2>Get Updates</h2>
        <p>Sign up for our newsletter to get the latest news, releases, and tour announcements.</p>

        <form name="newsletter" method="POST" data-netlify="true" class="newsletter-form">
          <input
            type="email"
            name="email"
            placeholder="your@email.com"
            required
            class="email-input"
          />
          <button type="submit" class="btn btn-primary">Subscribe</button>
        </form>
      </div>
    </div>
  </div>

  <div class="footer-logo">
    <img src="/logo.png" alt="Sunkissed" />
  </div>
</section>

<style>
  .contact-section {
    background-color: var(--color-charcoal);
    color: var(--color-cream);
    position: relative;
    overflow: hidden;
    padding-top: var(--spacing-xl) !important;
  }

  .footer-logo {
    position: absolute;
    bottom: -100px;
    right: -100px;
    opacity: 0.05;
    pointer-events: none;
  }

  .footer-logo img {
    width: 400px;
    height: auto;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-2xl);
    position: relative;
    z-index: 1;
  }

  .contact-section h2 {
    color: var(--color-cream);
    margin-bottom: var(--spacing-lg);
  }

  .contact-intro {
    margin-bottom: var(--spacing-xl);
    color: rgba(250, 247, 242, 0.8);
  }

  .social-links {
    display: flex;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .social-links a {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(250, 247, 242, 0.1);
    border-radius: 50%;
    color: var(--color-cream);
    transition: var(--transition);
  }

  .social-links a:hover {
    background-color: var(--color-sun-orange);
    transform: translateY(-4px);
  }

  .social-links svg {
    width: 24px;
    height: 24px;
  }

  .email-contact {
    margin-top: var(--spacing-lg);
  }

  .email-contact a {
    color: var(--color-sun-yellow);
    text-decoration: underline;
  }

  .email-contact a:hover {
    color: var(--color-sun-orange);
  }

  .newsletter p {
    margin-bottom: var(--spacing-lg);
    color: rgba(250, 247, 242, 0.8);
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .email-input {
    padding: 1rem 1.25rem;
    border-radius: var(--border-radius);
    border: 2px solid rgba(250, 247, 242, 0.2);
    background-color: rgba(250, 247, 242, 0.05);
    color: var(--color-cream);
    font-size: var(--font-size-base);
    font-family: var(--font-body);
    transition: var(--transition);
  }

  .email-input:focus {
    outline: none;
    border-color: var(--color-sun-orange);
    background-color: rgba(250, 247, 242, 0.1);
  }

  .email-input::placeholder {
    color: rgba(250, 247, 242, 0.5);
  }

  .newsletter-form .btn {
    width: 100%;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .footer-logo {
      bottom: -50px;
      right: -50px;
    }

    .footer-logo img {
      width: 250px;
    }
  }
</style>
