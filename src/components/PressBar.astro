<section class="press-bar">
  <div class="press-inner">
    <span class="press-label">AS FEATURED IN</span>
    <a href="https://newnoisemagazine.com/todays-new-noise-sunkissed/" target="_blank" rel="noopener noreferrer" class="press-item press-link">
      New Noise Magazine
    </a>
    <span class="press-dot">&middot;</span>
    <span class="press-item">KSFS Radio</span>
    <span class="press-dot">&middot;</span>
    <span class="press-item">Brick & Mortar Music Hall</span>
    <span class="press-dot">&middot;</span>
    <span class="press-item">Bottom of the Hill</span>
  </div>
</section>

<style>
  .press-bar {
    background: var(--burnt-umber);
    padding: 1.2rem 0;
    border-top: 3px solid var(--acid-yellow);
    border-bottom: 3px solid var(--acid-yellow);
    overflow: hidden;
  }

  .press-inner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .press-label {
    font-family: 'Josefin Sans', sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 4px;
    color: var(--acid-yellow);
    text-transform: uppercase;
    white-space: nowrap;
  }

  .press-item {
    font-family: 'Anton', sans-serif;
    font-size: 1.1rem;
    letter-spacing: 2px;
    color: var(--cream-paper);
    text-transform: uppercase;
    white-space: nowrap;
  }

  .press-link {
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .press-link:hover {
    color: var(--acid-yellow);
  }

  .press-dot {
    color: var(--psychedelic-orange);
    font-size: 1.5rem;
    line-height: 1;
  }

  @media (max-width: 768px) {
    .press-inner {
      gap: 0.8rem 1rem;
    }

    .press-item {
      font-size: 0.9rem;
    }

    .press-label {
      width: 100%;
      text-align: center;
      font-size: 0.65rem;
    }
  }
</style>
