---
const videos = [
  {
    title: "Sun Kissed Dreams Tour",
    embedUrl: "https://www.youtube.com/embed/zNSEwreNbI0",
  },
  {
    title: "Live at Brick & Mortar Music Hall",
    embedUrl: "https://www.youtube.com/embed/ufYwmKkvjN8",
  },
];
---

<section id="video" class="video-showcase">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">VIDEO</h2>
    </div>

    <div class="videos-grid">
      {videos.map((video) => (
        <div class="video-card">
          <div class="video-container">
            <iframe
              src={video.embedUrl}
              title={video.title}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
          <h3 class="video-label">{video.title}</h3>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .video-showcase {
    background: var(--burnt-umber);
    padding: 5rem 0;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-family: 'Anton', sans-serif;
    font-size: 5rem;
    letter-spacing: 0.05em;
    color: var(--acid-yellow);
    text-shadow: 4px 4px 0 var(--psychedelic-orange);
  }

  .videos-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2.5rem;
  }

  .video-card {
    text-align: center;
  }

  .video-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    border: 4px solid var(--acid-yellow);
    box-shadow: 6px 6px 0 var(--psychedelic-orange);
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .video-label {
    font-family: 'Anton', sans-serif;
    font-size: 1.1rem;
    letter-spacing: 3px;
    color: var(--cream-paper);
    text-transform: uppercase;
    margin-top: 1.2rem;
  }

  @media (max-width: 768px) {
    .videos-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .section-title {
      font-size: 3rem;
    }

    .video-container {
      box-shadow: 4px 4px 0 var(--psychedelic-orange);
    }
  }
</style>
