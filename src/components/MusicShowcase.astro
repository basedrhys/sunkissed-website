<style>
  .music-showcase {
    background: var(--burnt-umber);
    padding: 2rem 0 5rem 0;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-family: 'Anton', sans-serif;
    font-size: 4rem;
    letter-spacing: 0.05em;
    color: var(--acid-yellow);
    text-shadow: 4px 4px 0 var(--psychedelic-orange);
  }

  .singles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto 2rem;
  }

  .single-card {
    border: 5px solid var(--acid-yellow);
    background: #000;
    box-shadow:
      8px 8px 0 var(--psychedelic-orange),
      16px 16px 0 rgba(0, 0, 0, 0.15);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .single-card:hover {
    transform: translate(-4px, -4px);
    box-shadow:
      12px 12px 0 var(--psychedelic-orange),
      20px 20px 0 rgba(0, 0, 0, 0.15);
  }

  .single-card iframe {
    display: block;
  }

  .live-video-section {
    margin-bottom: 3rem;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  .live-video-label {
    font-family: 'Anton', sans-serif;
    font-size: 1.2rem;
    letter-spacing: 4px;
    color: var(--acid-yellow);
    display: block;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .live-video-container {
    position: relative;
    width: 100%;
    padding-bottom: min(50.625%, 506px);
    height: 0;
    overflow: hidden;
    border: 6px solid var(--acid-yellow);
    box-shadow: 8px 8px 0 var(--psychedelic-orange);
  }

  .live-video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .stream-links {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin: 4rem 0 3rem 0;
  }

  .stream-label {
    font-family: 'Anton', sans-serif;
    font-size: 1.1rem;
    font-weight: 400;
    letter-spacing: 5px;
    color: var(--acid-yellow);
    opacity: 0.85;
    text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
  }

  .stream-icons {
    display: flex;
    gap: 2rem;
  }

  .stream-link {
    color: var(--cream-paper);
    transition: all 0.3s ease;
    opacity: 0.8;
  }

  .stream-link:hover {
    color: var(--acid-yellow);
    opacity: 1;
    transform: translateY(-3px) scale(1.15);
  }

  .stream-icon {
    width: 32px;
    height: 32px;
    filter: drop-shadow(2px 2px 3px rgba(0, 0, 0, 0.3));
  }

  @media (max-width: 1024px) {
    .singles-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
    }
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }

    .single-card {
      box-shadow:
        6px 6px 0 var(--psychedelic-orange),
        12px 12px 0 rgba(0, 0, 0, 0.15);
    }

    .single-card:hover {
      transform: translate(-2px, -2px);
      box-shadow:
        8px 8px 0 var(--psychedelic-orange),
        14px 14px 0 rgba(0, 0, 0, 0.15);
    }

    .live-video-label {
      font-size: 1rem;
      letter-spacing: 3px;
    }

    .live-video-container {
      box-shadow: 4px 4px 0 var(--psychedelic-orange);
    }

    .stream-icons {
      gap: 1.5rem;
    }

    .stream-icon {
      width: 28px;
      height: 28px;
    }
  }
</style>
