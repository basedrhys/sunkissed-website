<style>
  .music-showcase {
    background: var(--cream-paper);
    padding: 5rem 0;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-family: 'Anton', sans-serif;
    font-size: 5rem;
    letter-spacing: 0.05em;
    color: var(--burnt-umber);
    text-shadow: 4px 4px 0 var(--acid-yellow);
  }

  .singles-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2.5rem;
    margin-bottom: 3rem;
  }

  .single-card {
    border: 4px solid var(--burnt-umber);
    background: var(--cream-paper);
    box-shadow: 6px 6px 0 var(--psychedelic-orange);
    overflow: hidden;
  }

  .single-embed {
    border-bottom: 3px solid var(--burnt-umber);
  }

  .single-embed iframe {
    display: block;
  }

  .single-info {
    padding: 1.5rem;
  }

  .single-title {
    font-family: 'Anton', sans-serif;
    font-size: 1.2rem;
    letter-spacing: 2px;
    color: var(--burnt-umber);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
  }

  .single-desc {
    font-family: 'Josefin Sans', sans-serif;
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--burnt-umber);
    opacity: 0.8;
  }

  .stream-links {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .stream-label {
    font-family: 'Josefin Sans', sans-serif;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 4px;
    color: var(--burnt-umber);
    opacity: 0.6;
  }

  .stream-icons {
    display: flex;
    gap: 1.5rem;
  }

  .stream-link {
    color: var(--burnt-umber);
    transition: all 0.3s ease;
    opacity: 0.7;
  }

  .stream-link:hover {
    color: var(--psychedelic-orange);
    opacity: 1;
    transform: scale(1.15);
  }

  .stream-icon {
    width: 28px;
    height: 28px;
  }

  @media (max-width: 768px) {
    .singles-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .section-title {
      font-size: 3rem;
    }
  }
</style>
