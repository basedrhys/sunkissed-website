---
const singles = [
  {
    title: "On the Sun Kissed Hills of San Francisco",
    description: "Debut single. Guitar-driven indie rock about leaving home for a city that doesn't feel like home yet.",
    spotifyTrack: "https://open.spotify.com/track/6A5JXtA3Vri935nBwSc1jY",
    spotifyEmbed: "https://open.spotify.com/embed/track/6A5JXtA3Vri935nBwSc1jY?utm_source=generator&theme=0",
  },
  {
    title: "Echos",
    description: "Synth-driven, up-tempo. The high-energy side of the band.",
    spotifyTrack: "https://open.spotify.com/track/7odv7SoCNwUgOCwoC3QTId",
    spotifyEmbed: "https://open.spotify.com/embed/track/7odv7SoCNwUgOCwoC3QTId?utm_source=generator&theme=0",
  },
];
---

<section id="music" class="music-showcase">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">MUSIC</h2>
    </div>

    <div class="singles-grid">
      {singles.map((single) => (
        <div class="single-card">
          <div class="single-embed">
            <iframe
              src={single.spotifyEmbed}
              width="100%"
              height="152"
              frameborder="0"
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
              loading="lazy"
              style="border-radius: 0;"
            ></iframe>
          </div>
          <div class="single-info">
            <h3 class="single-title">{single.title}</h3>
            <p class="single-desc">{single.description}</p>
          </div>
        </div>
      ))}
    </div>

