    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 2px,
        rgba(0, 0, 0, 0.008) 2px,
        rgba(0, 0, 0, 0.008) 4px
      );
    pointer-events: none;
    opacity: 0.6;
  }

  .about-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .about-content h2 {
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-xl);
    position: relative;
    display: inline-block;
  }

  /* Wavy hand-drawn underline */
  .wavy-underline {
    position: absolute;
    bottom: -18px;
    left: 50%;
    transform: translateX(-50%);
