    margin-bottom: 0;
  }

  .about-image {
    margin-top: var(--spacing-xl);
  }

  .about-image img {
    max-width: 600px;
    width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    transform: rotate(-1deg);
    transition: transform 0.3s ease;
  }

